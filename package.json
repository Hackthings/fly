{
  "name": "fly-root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --parallel build",
    "rebuild": "lerna run --parallel rebuild",
    "bundle": "lerna run bundle",
    "clean": "lerna run --parallel clean",
    "dev": "lerna run --parallel dev",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest",
    "test:integration": "yarn jest --config=./tests/jest.config.js"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "lerna": "^3.1.1",
    "ts-jest": "^23.1.4",
    "typescript": "3.0.1"
  }
}