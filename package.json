{
  "name": "fly-root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "tests/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --parallel build",
    "rebuild": "lerna run --parallel rebuild",
    "bundle": "lerna run bundle",
    "clean": "lerna run --parallel clean",
    "clean:dependencies": "rm -rf node_modules packages/*/node_modules tests/*/node_modules",
    "dev": "lerna run --parallel dev",
    "test": "yarn test:packages && yarn test:e2e",
    "test:packages": "jest packages/*",
    "test:e2e": "lerna run test"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "lerna": "^3.1.1",
    "ts-jest": "^23.1.4",
    "typescript": "3.0.1"
  }
}